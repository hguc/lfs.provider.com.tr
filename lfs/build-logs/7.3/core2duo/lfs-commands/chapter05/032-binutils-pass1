#!/bin/bash
set +h
set -e

cd $PKGDIR
mkdir -v ../binutils-build
cd ../binutils-build
../binutils-2.23.1/configure     \
    --prefix=/tools            \
    --with-sysroot=$LFS        \
    --with-lib-path=/tools/lib \
    --target=$LFS_TGT          \
    --disable-nls              \
    --disable-werror
make
case $(uname -m) in
  x86_64) mkdir -v /tools/lib && ln -sv lib /tools/lib64 ;;
esac
make install
echo -e "\n\nTotalseconds: $SECONDS\n"
exit
